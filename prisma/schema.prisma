generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  emailVerified DateTime?
  name          String?
  password      String?
  image         String?
  brands        Brand[]
  accounts      Account[]
  sessions      Session[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@unique([identifier, token])
}

model Brand {
  id          String             @id @default(cuid())
  name        String
  domain      String
  industry    String?
  userId      String
  user        User               @relation(fields: [userId], references: [id])
  competitors Competitor[]
  topics      Topic[]
  metrics     VisibilityMetric[]
  createdAt   DateTime           @default(now())
  updatedAt   DateTime           @updatedAt
}

model Competitor {
  id        String         @id @default(cuid())
  name      String
  domain    String
  brandId   String
  brand     Brand          @relation(fields: [brandId], references: [id], onDelete: Cascade)
  mentions  BrandMention[]
  createdAt DateTime       @default(now())
}

model Topic {
  id            String   @id @default(cuid())
  name          String
  autoGenerated Boolean  @default(false)
  brandId       String
  brand         Brand    @relation(fields: [brandId], references: [id], onDelete: Cascade)
  prompts       Prompt[]
  createdAt     DateTime @default(now())
}

model Prompt {
  id        String        @id @default(cuid())
  text      String
  topicId   String
  topic     Topic         @relation(fields: [topicId], references: [id], onDelete: Cascade)
  responses LLMResponse[]
  createdAt DateTime      @default(now())
}

model LLMResponse {
  id           String         @id @default(cuid())
  promptId     String
  prompt       Prompt         @relation(fields: [promptId], references: [id], onDelete: Cascade)
  provider     LLMProvider
  responseText String
  mentions     BrandMention[]
  sources      CitedSource[]
  createdAt    DateTime       @default(now())
}

model BrandMention {
  id           String       @id @default(cuid())
  responseId   String
  response     LLMResponse  @relation(fields: [responseId], references: [id], onDelete: Cascade)
  brandId      String?
  competitorId String?
  competitor   Competitor?  @relation(fields: [competitorId], references: [id])
  brandName    String
  rankPosition Int?
  isCited      Boolean      @default(false)
  context      String?
  createdAt    DateTime     @default(now())
}

model CitedSource {
  id         String      @id @default(cuid())
  responseId String
  response   LLMResponse @relation(fields: [responseId], references: [id], onDelete: Cascade)
  url        String
  domain     String
  title      String?
  createdAt  DateTime    @default(now())
}

model VisibilityMetric {
  id            String   @id @default(cuid())
  brandId       String
  brand         Brand    @relation(fields: [brandId], references: [id], onDelete: Cascade)
  date          DateTime
  visibilityPct Float
  avgRank       Float?
  citationCount Int
  createdAt     DateTime @default(now())

  @@unique([brandId, date])
}

enum LLMProvider {
  OPENAI
  ANTHROPIC
  GOOGLE
  PERPLEXITY
}
